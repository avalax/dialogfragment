<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/alterMessageEditText"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_show_basic_dialog"
        android:id="@+id/buttonShowBasicDialog"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_show_alert_dialog"
        android:id="@+id/buttonShowAlertDialog"
        android:layout_below="@+id/buttonShowBasicDialog"
        />
</RelativeLayout>
